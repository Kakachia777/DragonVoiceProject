                else:  # Last section - medium to dark with accent hint
                    ratio = (pos - 0.8) / 0.2
                    r1, g1, b1 = self.hex_to_rgb(self.colors["bg_medium"])
                    r2, g2, b2 = self.hex_to_rgb(self.colors["bg_dark"])
